// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum TokenType {
  ACCESS
  REFRESH
  PASSWORD_RESET
  EMAIL_VERIFICATION
}

enum PermissionAction {
  CREATE
  READ
  UPDATE
  DELETE
  MANAGE
}

enum ResourceType {
  USERS
  ROLES
  PERMISSIONS
  AUDIT_LOGS
  SETTINGS
  ENTERPRISE
  USER_RELATIONSHIPS
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  FREELANCE
  INTERN
}

enum ExperienceLevel {
  JUNIOR
  MID
  SENIOR
  LEAD
  PRINCIPAL
}

enum RelationshipType {
  CONTACT
  COLLABORATOR
  FRIEND
  COLLEAGUE
  MENTOR
  MENTEE
  TEAM_MEMBER
}

// ==================== ENTERPRISE ====================

model Enterprise {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  logo        String?
  website     String?
  
  // Relations
  roles       Role[]
  users       UserEnterprise[]
  permissions EnterprisePermission[]
  auditLogs   AuditLog[] @relation("EnterpriseAudits")
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([name])
}

// ==================== USER ENTERPRISE RELATION ====================

model UserEnterprise {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  enterpriseId  String
  enterprise    Enterprise @relation(fields: [enterpriseId], references: [id], onDelete: Cascade)
  
  joinedAt      DateTime @default(now())
  
  @@unique([userId, enterpriseId])
  @@index([userId])
  @@index([enterpriseId])
}

// ==================== USER RELATIONSHIPS (Many-to-Many) ====================

model UserRelationship {
  id                String   @id @default(cuid())
  
  // Usuario que inicia la relaci贸n
  userId            String
  user              User     @relation("InitiatedRelationships", fields: [userId], references: [id], onDelete: Cascade)
  
  // Usuario relacionado
  relatedUserId     String
  relatedUser       User     @relation("ReceivedRelationships", fields: [relatedUserId], references: [id], onDelete: Cascade)
  
  // Tipo de relaci贸n
  relationshipType  RelationshipType @default(CONTACT)
  
  // Estado de la relaci贸n (pendiente, aceptada, bloqueada)
  status            String   @default("PENDING") // PENDING, ACCEPTED, BLOCKED
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([userId, relatedUserId])
  @@index([userId])
  @@index([relatedUserId])
  @@index([status])
}

// ==================== AUTH & SECURITY ====================

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String
  phone             String?  @unique
  
  // Account status
  isActive          Boolean  @default(true)
  isVerified        Boolean  @default(false)
  lastLogin         DateTime?
  
  // Relations
  profile           UserProfile?
  roles             Role[]              @relation("UserRoles")
  tokens            AuthToken[]
  permissions       PermissionAssignment[] @relation("UserPermissions")
  auditLogs         AuditLog[]          @relation("UserAudits")
  
  // User Relationships (Many-to-Many)
  initiatedRelationships UserRelationship[] @relation("InitiatedRelationships")
  receivedRelationships  UserRelationship[] @relation("ReceivedRelationships")
  
  // Enterprise Association
  enterprises       UserEnterprise[]
  
  // Enterprise Permissions
  enterprisePermissions EnterprisePermission[] @relation("GrantedBy")
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([email])
  @@index([phone])
}

model AuthToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      TokenType
  token     String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
}

// ==================== USER PROFILE & CV ====================

model UserProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Personal Information
  firstName         String
  lastName          String
  dateOfBirth       DateTime?
  
  // Professional Information
  jobTitle          String?
  department        String?
  bio               String?
  
  // Media
  profilePhotoUrl   String?
  profilePhotoKey   String?
  
  // Contact Information
  phone             String?
  emergencyContact  String?
  emergencyPhone    String?
  
  // Location
  country           String?
  city              String?
  address           String?
  postalCode        String?
  
  // Additional
  timezone          String?  @default("UTC")
  language          String?  @default("es")
  
  // CV Relations
  experiences       Experience[]
  educations        Education[]
  skills            Skill[]
  certifications    Certification[]
  languages         LanguageProficiency[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// ==================== CV DATA ====================

model Experience {
  id                String   @id @default(cuid())
  profileId         String
  profile           UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  // Company & Position
  companyName       String
  jobTitle          String
  description       String?
  
  // Employment Details
  employmentType    EmploymentType
  experienceLevel   ExperienceLevel?
  
  // Dates
  startDate         DateTime
  endDate           DateTime?
  isCurrent         Boolean  @default(false)
  
  // Additional
  location          String?
  skills            String[]
  achievements      String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([profileId])
}

model Education {
  id                String   @id @default(cuid())
  profileId         String
  profile           UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  // Institution & Degree
  school            String
  degree            String
  fieldOfStudy      String
  
  // Grades
  grade             String?
  
  // Dates
  startDate         DateTime
  endDate           DateTime?
  isCurrent         Boolean  @default(false)
  
  // Additional
  description       String?
  skills            String[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([profileId])
}

model Skill {
  id                String   @id @default(cuid())
  profileId         String
  profile           UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  name              String
  proficiency       ExperienceLevel?
  yearsOfExperience Int?
  endorsements      Int     @default(0)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([profileId, name])
  @@index([profileId])
}

model Certification {
  id                String   @id @default(cuid())
  profileId         String
  profile           UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  name              String
  issuingOrganization String
  issueDate         DateTime
  expirationDate    DateTime?
  certificateUrl    String?
  certificateId     String?
  
  description       String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([profileId])
}

model LanguageProficiency {
  id                String   @id @default(cuid())
  profileId         String
  profile           UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  language          String
  proficiency       String
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([profileId, language])
  @@index([profileId])
}

// ==================== ROLES & PERMISSIONS ====================

model Role {
  id          String   @id @default(cuid())
  name        String
  description String?
  isSystem    Boolean  @default(false)
  isCustom    Boolean  @default(true)
  
  // Vinculaci贸n obligatoria con Enterprise
  enterpriseId String
  enterprise   Enterprise @relation(fields: [enterpriseId], references: [id], onDelete: Cascade)
  
  // Relations
  users       User[]   @relation("UserRoles")
  permissions Permission[] @relation("RolePermissions")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([enterpriseId, name])
  @@index([name])
  @@index([enterpriseId])
}

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  action      PermissionAction
  resource    ResourceType
  
  // Relations
  roles       Role[]   @relation("RolePermissions")
  userAssignments PermissionAssignment[] @relation("PermissionAssignments")
  enterprisePermissions EnterprisePermission[] @relation("PermissionRelation")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([action, resource])
  @@index([resource])
}

model EnterprisePermission {
  id            String   @id @default(cuid())
  enterpriseId  String
  enterprise    Enterprise @relation(fields: [enterpriseId], references: [id], onDelete: Cascade)
  
  permissionId  String
  permission    Permission @relation("PermissionRelation", fields: [permissionId], references: [id], onDelete: Cascade)
  
  grantedBy     String
  grantedByUser User     @relation("GrantedBy", fields: [grantedBy], references: [id], onDelete: Cascade)
  
  grantedAt     DateTime @default(now())
  expiresAt     DateTime?
  
  @@unique([enterpriseId, permissionId])
  @@index([enterpriseId])
  @@index([permissionId])
  @@index([grantedBy])
}

model PermissionAssignment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation("UserPermissions", fields: [userId], references: [id], onDelete: Cascade)
  
  permissionId String
  permission  Permission @relation("PermissionAssignments", fields: [permissionId], references: [id], onDelete: Cascade)
  
  grantedBy   String
  grantedAt   DateTime @default(now())
  expiresAt   DateTime?
  
  @@unique([userId, permissionId])
  @@index([userId])
  @@index([permissionId])
}

// ==================== AUDIT & LOGGING ====================

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation("UserAudits", fields: [userId], references: [id], onDelete: Cascade)
  
  enterpriseId String?
  enterprise  Enterprise? @relation("EnterpriseAudits", fields: [enterpriseId], references: [id], onDelete: SetNull)
  
  action      String
  resource    ResourceType
  resourceId  String?
  
  changes     Json?
  ipAddress   String?
  userAgent   String?
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([enterpriseId])
  @@index([resource])
  @@index([createdAt])
}
